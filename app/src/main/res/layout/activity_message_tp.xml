<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".core.HomePage" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_66"
        android:background="#B9B8B8">

        <TableRow
            android:layout_width="match_parent"
            android:background="#FFC0CB"
            android:layout_height="@dimen/dp_66">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_66"
                android:backgroundTint="#00FFFFFF"
                android:src="@android:drawable/ic_menu_camera" />

            <LinearLayout
                android:layout_width="@dimen/dp_309"
                android:layout_height="match_parent"
                android:orientation="horizontal"/>

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_66"
                android:layout_weight="1"
                android:backgroundTint="#00FFFFFF"
                android:src="@android:drawable/ic_menu_add"
                android:background="@drawable/corner"/>

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:src="@mipmap/didi" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:src="@mipmap/waimai" />

        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#02FFFFFF"
            android:src="@mipmap/lvyou" />

        <ImageButton
            android:id="@+id/imageButton9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#03FFFFFF"
            android:src="@mipmap/jiudian" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="叫车服务"
            android:textColor="#111111" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="订餐预定"
            android:textColor="#111111" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="景点预定"
            android:textColor="#111111" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="酒店预订"
            android:textColor="#111111" />

    </LinearLayout>


       <!-- <include layout="@layout/activity_dongtai" />-->

    <fragment
        android:id="@+id/fragment"
        android:name="com.example.yipartyapp.core.dongtaiActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>