<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dp_350"
        android:layout_height="@dimen/dp_220">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="@dimen/dp_110"
            android:layout_height="@dimen/dp_80"
            android:layout_marginStart="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_marginEnd="@dimen/dp_239"
            android:layout_marginBottom="@dimen/dp_139"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="@dimen/dp_183"
                android:layout_height="@dimen/dp_132"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.019"
                app:srcCompat="@mipmap/tanchaung" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_348"
            android:layout_height="@dimen/dp_137"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_marginBottom="1dp"
            android:orientation="vertical"
            android:background="@drawable/background_talk"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_96"
                android:gravity="center"
                android:text="为了更好的体验亿聚会，请使用真实信息！"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="16sp" />

            <Button
                android:id="@+id/sure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_corner"
                android:onClick="close"
                android:text="确            定" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
