<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".core.recommendPage_ui.MerchantDetlisActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_66"
        android:orientation="horizontal"
        android:background="#FFC0CB"
        >

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="@dimen/dp_82"
            android:layout_height="@dimen/dp_66"
            android:background="#00FFFFFF"
            android:onClick="back"
            app:srcCompat="@android:drawable/ic_menu_revert" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_66"
            android:layout_weight="1"
            android:text="聚 会 详 情"
            android:textColor="#FFF"
            android:textSize="@dimen/dp_25"
            android:textStyle="bold"
            android:gravity="center"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/wh" />

    <TextView
        android:id="@+id/textView35"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_65"
        android:text="朝天门火锅"
        android:textColor="@color/base_000000"
        android:textSize="@dimen/dp_30" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:text="四川省成都市龙泉驿区"
        android:textSize="@dimen/dp_17"/>

    <TextView
        android:id="@+id/textView36"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_326"
        android:background="#2CAF99D8"
        android:gravity="center"
        android:text="*************************************************************这里是聚会方案案例详情介绍*************************************************************" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView37"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="价 格￥："
            android:textColor="#FD0505"
            android:textSize="@dimen/dp_30"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView38"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="100.0"
            android:textColor="#FD0505"
            android:textSize="@dimen/dp_30"
            android:textStyle="bold"
            android:gravity="center|left"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F0FA4B2C"
            android:onClick="addOrder"
            android:text="加 入 订 单"
            android:textSize="@dimen/dp_18" />
    </LinearLayout>


</LinearLayout>