<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#75B6B4B4"
    android:orientation="vertical"
    tools:context=".core.MinePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_66"
        android:background="#FFC0CB"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_66"
            android:gravity="center"
            android:text="我  的"
            android:textColor="#FFF"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:background="#FCFAFA">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_gravity="center_vertical"
            android:background="@drawable/emoji_02_smile_1"/>

        <LinearLayout
            android:layout_width="@dimen/dp_326"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="@dimen/dp_284"
                android:layout_height="@dimen/dp_53"
                android:gravity="center_vertical"
                android:text="用户名"
                android:textSize="@dimen/dp_22"
                android:textStyle="bold"
                android:textColor="#070707"/>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="@dimen/dp_284"
                android:layout_height="@dimen/dp_48"
                android:gravity="center_vertical"
                android:text="学 校"
                android:textColor="@color/base_697A9F" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/dp_39"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center|right"
            android:src="@mipmap/to"
            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/pickerview_topbar_padding"
        android:background="#FCFAFA"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="@dimen/dp_365"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:text="    修 改 密 码"
            android:textColor="#070707"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="right|center"
            android:layout_weight="1"
            android:src="@mipmap/to" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/pickerview_topbar_padding"
        android:background="#FCFAFA"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="@dimen/dp_365"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:text="    关 于 软 件"
            android:textColor="#070707"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="right|center"
            android:layout_weight="1"
            android:src="@mipmap/to" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/pickerview_topbar_padding"
        android:background="#FCFAFA"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="@dimen/dp_365"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:text="    身 份 管 理"
            android:textColor="#070707"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="right|center"
            android:layout_weight="1"
            android:src="@mipmap/to" />
    </LinearLayout>
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@android:dimen/thumbnail_width"
        android:text="退 出 登 录"
        android:background="#FCFAFA"/>


</LinearLayout>