<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".core.MinePage_headImage.UpPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_66"
        android:orientation="horizontal"
        android:background="#FFC0CB"
        >

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="@dimen/dp_82"
            android:layout_height="@dimen/dp_66"
            android:background="#00FFFFFF"
            android:onClick="returnLost"
            app:srcCompat="@android:drawable/ic_menu_revert"
            tools:ignore="OnClick" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_66"
            android:layout_weight="1"
            android:text="密 码 更 新"
            android:textColor="#FFF"
            android:textSize="@dimen/dp_25"
            android:textStyle="bold"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="114dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="旧 密 码："
            android:textColor="#E90C0C0C"
            android:textSize="@dimen/dp_15"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_background"
            android:ems="10"
            android:hint="请输入旧密码"
            android:inputType="textPassword"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/regiesName"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="114dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="新 密 码："
            android:textColor="#E90C0C0C"
            android:textSize="@dimen/dp_15"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_background"
            android:ems="10"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/regiesName"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="114dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="确 认 密 码："
            android:textColor="#E90C0C0C"
            android:textSize="@dimen/dp_15"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_background"
            android:ems="10"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/regiesName"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_100"
        android:onClick="checkPassword"
        android:text="确    认    修    改" />

</LinearLayout>